<div id="content">
    <div class="container">
        <div class="jumbotron">
            <form class="form-inline" method="GET" action="/search">
                <div class="input-group input-group-lg search-panel">
                    <input class="form-control input-lg " name="q" type="text" placeholder="Enter keyword"
                           value=""
                           style="width:70%">
                    <a href="javascript:getSearch();" class="btn btn-lg btn-info search-panel-button">
            <span class="glyphicon glyphicon-search">
              <span class="search-text">Search</span>
            </span>
                    </a>
                </div>
            </form>
            <div class="form-inline search-info">
                <h6></h6>
            </div>
        </div>
    </div>
</div>




<div class="row marketing">
    <% if(results.length > 0){ %>
    <% for(var i = 0; i < results.length; i++) { %>
    <div class="col-lg-12" style=" padding-bottom:30px;">
        <h5>
            <img src=" http://www.google.com/s2/favicons?domain=<%= results[i].fields.host %>"> <%= results[i].fields.host %>
        </h5>
        <a href="#"  onclick="getSiteMove('<%= results[i].fields.url %>')">
            <h3><%= results[i].fields.title %> </h3>
        </a>
        <p>
      <span content="searchContent<%= i %>">
        <%= results[i].fields.content.toString().substring(0, 200) %>
      </span>
        </p>
    </div>
    <% } %>
    <% }else{ %>
    <div class="col-lg-12">
        <p><span>Sorry.No keyword contents.</span></p>
    </div>
    <% } %>
</div>



<div class="light">
    <div class="paginate wrapper">
        <ul>
            <li id="paging"></li>
        </ul>
    </div>
</div>

<script>
    var pageTc = "";
    function pageInit(pageNum) {
        location.href = "../content?p="+ pageNum;
    }

    function totalCnt() {
        $.ajax({
            type: "GET",
            url: '../totalCnt',
            async: false,
            success: function (data) {
                if(data.result) {
                    pageTc =  data.count;
                }else{
                    return 0;
                }
            }
        });
    }

    $(document).ready(function () {
        totalCnt()

        $("#paging").paging({
            current: <%=pageNum %>,
            max: pageTc/30,
            itemCurrent: "active"
        });

    });
</script>